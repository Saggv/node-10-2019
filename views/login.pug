extends layout/mainLayout.pug 

block styles
    link(href="/css/main.css" rel="stylesheet")
    link(rel="stylesheet" href="/css/product.css")

block content
     form.login-form( action="/login" method="POST")
          div.form-control
               if(msgErr)
                    h5.error #{msgErr}
               label.form__title Email
               input.form__input(type="text" name="email" )
               label.form__title Password
               input.form__input(type="password" name="password")
          button.btn(type="submit") Login